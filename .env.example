# Scout RetailBot Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Groq AI Configuration (Required for RetailBot)
GROQ_API_KEY=your-groq-api-key-here

# RetailBot Configuration
RETAILBOT_API_URL=http://localhost:8000
DATABASE_URL=postgresql://user:password@host:port/database

# Development Settings
NODE_ENV=development
MASTER_TOGGLE_PORT=8080

# Optional: Additional AI Services
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# MCP Configuration
MCP_READER_PORT=8888
MCP_READER_MODE=read_only